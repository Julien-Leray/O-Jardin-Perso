<div id="productsSection" style="display:none;">
    <h1>Produits</h1>
    <select id="products" onchange="handleProductSelection()">
        <option value="">--Sélectionnez un produit--</option>
        <option value="new">Ajouter un nouveau produit</option>
    </select>
  </div>
  <div id="productDetails" style="display:none;">
    <h2>Détails du Produit</h2>
    <form id="productForm">
        <label for="name">Nom:</label>
        <input type="text" id="name">
        <label for="latin_name">Nom Latin:</label>
        <input type="text" id="latin_name">
  
        <label for="productsPicture">Image URL:</label>
        <input type="text" id="productsPicture" oninput="updateImagePreviewProducts()">
        <br>
        <label for="imageUploadDownload">Image : 
            <input type="file" id="imageUploadDownload" name="image" accept="image/*" onchange="updateImagePreviewDownload()" required>
        </label><br>
        <img id="imagePreviewProducts" src="" alt="Prévisualisation de l'image" style="max-width: 200px; display: none; border: 1px solid #000;">
        <br>
  
        <fieldset>
          <legend>Date de Plantation :</legend>
          <div id="plantation_date" class="month-checkboxes">
              <% const months = ["Janvier", "Février", "Mars", "Avril", "Mai", "Juin", "Juillet", "Août", "Septembre", "Octobre", "Novembre", "Décembre"]; %>
              <% months.forEach((month, index) => { %>
                  <label><input type="checkbox" value="<%= index + 1 %>"> <%= month %></label>
              <% }); %>
          </div>
      </fieldset>
      <fieldset>
          <legend>Date de Récolte :</legend>
          <div id="harvest_date" class="month-checkboxes">
              <% months.forEach((month, index) => { %>
                  <label><input type="checkbox" value="<%= index + 1 %>"> <%= month %></label>
              <% }); %>
          </div>
      </fieldset>
      <label for="soil_type">Type de Sol:</label>
      <input type="text" id="soil_type">
      <label for="diseases">Maladies:</label>
      <input type="text" id="diseases">
      <label for="watering_frequency">Fréquence d'Arrosage:</label>
      <input type="text" id="watering_frequency">
      <label for="description">Description:</label>
      <textarea id="description"></textarea>
      <label for="sowing_tips">Conseils de Semis:</label>
      <textarea id="sowing_tips"></textarea>
      <button type="button" id="saveButton" onclick="saveProduct()">Enregistrer</button>
      <button type="button" onclick="deleteProduct()">Supprimer</button>
    </form>
  </div>
  