<section id="tutorialDetails">
    <h2 id="tutorialDetailsTitle">Détails du Tutoriel</h2>
    <div id="mainContainerTuto">
        <div id="contenairLeftTuto">
            <label for="tutorialPicture">Image URL:</label>
            <input type="text" id="tutorialPicture" oninput="updateImagePreviewTuto()"><br>
            <label for="tutorialImageUploadDownload">Image : 
                <input type="file" id="tutorialImageUploadDownload" name="image" accept="image/*" onchange="updateImagePreviewDownloadTuto()">
            </label><br>
            <img id="imagePreviewTuto" src="" alt="Prévisualisation de l'image"><br>
        </div>
        <div id="contenairRightTuto">
            <label for="tutorialTitle">Titre : </label>
            <input type="text" id="tutorialTitle" required><br>
            <label for="tutorialTheme">Thème : </label>
            <input type="text" id="tutorialTheme" required><br>
            <label for="tutorialArticle">Article : </label>
            <textarea id="tutorialArticle" required></textarea><br>
        </div>
    </div>
    <div id="contenairBottomTuto">
        <button id="saveTutorialButton" onclick="saveTutorial()">Enregistrer le Tutoriel</button>
        <button onclick="deleteTutorial()">Supprimer le Tutoriel</button>
        <label for="tutorialCreatedAt">Créé le:</label>
        <input type="text" id="tutorialCreatedAt" readonly><br>
        <label for="tutorialUpdatedAt">Mis à jour le:</label>
        <input type="text" id="tutorialUpdatedAt" readonly><br>
    </div>
</section>