<section id="usersSection" style="display: block;">
    <h2>Liste des Utilisateurs</h2>
    <table id="usersTable">
        <thead>
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="usersTableBody">
            <!-- Les utilisateurs seront insérés ici par JavaScript -->
        </tbody>
    </table>
    <button id="addUserButton" onclick="showUserForm()">Ajouter un Utilisateur</button>
</section>

<section id="userFormSection" style="display: none;">
    <h2>Détails de l'Utilisateur</h2>
    <form id="userForm">
        <input type="hidden" id="userIdCreate">
        <label for="userEmailCreate">Email:</label>
        <input type="email" id="userEmailCreate" required><br>
        <label for="userFirstnameCreate">Prénom:</label>
        <input type="text" id="userFirstnameCreate" required><br>
        <label for="userLastnameCreate">Nom:</label>
        <input type="text" id="userLastnameCreate" required><br>
        <label for="userPasswordCreate">Mot de Passe:</label>
        <input type="password" id="userPasswordCreate" required><br>
        <label for="userAddressCreate">Adresse:</label>
        <input type="text" id="userAddressCreate"><br>
        <label for="userZipCodeCreate">Code Postal:</label>
        <input type="text" id="userZipCodeCreate"><br>
        <label for="userCityCreate">Ville:</label>
        <input type="text" id="userCityCreate"><br>
        <label for="userWateringAlertCreate">Alerte Arrosage:</label>
        <input type="checkbox" id="userWateringAlertCreate"><br>
        <label for="userForecastAlertCreate">Alerte Prévisions:</label>
        <input type="checkbox" id="userForecastAlertCreate"><br>
        <label for="userIsAdminCreate">Admin:</label>
        <input type="checkbox" id="userIsAdminCreate"><br>
        <label for="userCreatedAtCreate">Créé le:</label>
        <input type="text" id="userCreatedAtCreate" readonly><br>
        <label for="userUpdatedAtCreate">Mis à jour le:</label>
        <input type="text" id="userUpdatedAtCreate" readonly><br>
        <button type="button" id="saveNewButton" onclick="saveNewUser()">Enregistrer Nouveau</button>
        <button type="button" id="saveEditButton" onclick="saveEditUser()">Enregistrer Modification</button>
        <button type="button" onclick="hideUserForm()">Annuler</button>
    </form>
</section>